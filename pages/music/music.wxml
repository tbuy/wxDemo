<view class="music">
  <view class="tab">
    <view class="tabItem {{selectedId == item.id ? 'selected' : ''}}" wx:for="{{tabArray}}" wx:key="{{item.id}}" bindtap="selectedTab" data-id="{{item.id}}">{{item.name}}</view>
  </view>
  <view class="content">
    <swiper bindchange="selectedItem" current="{{selectedId}}">
        <swiper-item>
          <include src="musicInfo.wxml" />
        </swiper-item>
        <swiper-item>
          <include src="musicPlay.wxml" />
        </swiper-item>
        <swiper-item>
          <include src="musicPlaylist.wxml" />
        </swiper-item>
    </swiper>
  </view>
  <view class="player">
   
  </view>
</view>