.music {
  padding: 0;
  position: relative;
}

/* 头部 */
.tab {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}
.tabItem {
  text-align: center;
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 6rpx solid #3C3633;
}
.selected {
  border-bottom: 6rpx solid pink;

}
/* 底部 */
.player {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  background-color: #C1B4AD;
}

/* 第一页 */
.musicInfo {
  background-color: red;
}
.banner {
  width: 100%;
  height: 300rpx;
  
}
.banner-swiper {
  height: 300rpx;
}
.banner-item {
  height: 300rpx;
}
.banner-image {
  width: 100%;
   height: 300rpx;
}
.menu {
  background-color: pink;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.menu-item {

}
.menu-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
