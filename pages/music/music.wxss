.music {
  padding: 0;
  position: relative;
}

/* 头部 */

.tab {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  background-color: #554c47;
  color: #fff;
}

.tabItem {
  text-align: center;
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
}

.selected {
  background-color: #877e79;
}

/* 底部 */

.player-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #554c47;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  color: #fff;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

/* 第一页 */

.musicInfo {
  height: 100vh;
  background-color: #3c3633;
  color: #fff;
}

.banner {
  width: 100%;
  height: 300rpx;
}

.banner-swiper {
  height: 300rpx;
}

.banner-item {
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 300rpx;
}

.menu {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 40rpx 80rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.menu-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
}

.albumList {
  padding: 0 40rpx;
  padding-bottom: 200rpx;
}

.ablum-title {
  margin-bottom: 40rpx;
  font-weight: 700;
}

.album-wrap {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.album-item {
  width: 30%;
  margin-bottom: 30rpx;
}

.album-image {
  width: 200rpx;
  height: 200rpx;
}

.player {
  display: flex;
}

/* 第二页 */

.musicPlay {
  height: 100vh;
  background-color: #3c3633;
  color: #fff;
  overflow: hidden;
}
.music-title {
  text-align: center;
  margin-top: 60rpx;
  font-size: 40rpx;
}
.diskbox {
  text-align: center;
  margin: 80rpx auto 180rpx;
}
.disk {
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
}
.playerControl {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.control-time {
}

.palyerSlider {
  width: 450rpx;
  padding-top: 0.3rem;
}

slider {
  padding: 0;
  margin: 0;
}

/* 第三页 */

.music-list {
  height: 100vh;
  background-color: #3c3633;
  color: #fff;
}

.music-item {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #6d625c;
}

.music-list-image {
  height: 120rpx;
  width: 120rpx;
  margin-right: 30rpx;
}
